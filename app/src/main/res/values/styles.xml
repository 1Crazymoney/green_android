<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkJungleGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawableSendReceiveIcColor">@color/accent</item>
        <item name="android:windowBackground">@color/darkJungleGreen</item>
        <item name="preferenceTheme">@style/preferenceTheme</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorBackgroundFloating">@color/buttonJungleGreen</item>
        <item name="android:itemBackground">@color/buttonJungleGreen</item>

        <item name="colorPrimaryVariant">@color/accentPressed</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accentPressed</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Bridge">

        <item name="textAppearanceHeadline1">@style/TextAppearance.Green.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Green.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Green.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Green.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Green.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Green.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Green.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Green.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Green.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Green.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Green.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Green.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Green.Overline</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <!-- Default drawables for buttons -->
        <item name="materialButton">@drawable/material_button</item>
        <item name="materialButtonBorder">@drawable/material_button_border</item>
        <item name="materialButtonBorderText">@color/green</item>
        <item name="materialButtonKeyboard">@drawable/material_button_keyboard</item>
        <item name="materialButtonSelection">@drawable/material_button_selection</item>
        <item name="materialFeeButtonSelected">@drawable/fee_button_selected</item>
        <item name="materialFeeButtonUnSelected">@drawable/fee_button_unselected</item>
        <item name="qrBg">@drawable/ic_qr_bg</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="preferenceTheme">@style/preferenceTheme</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Green.MaterialAlertDialog</item>

        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green_dark</item>
        <item name="colorSecondary">@color/brand_green</item>
        <item name="colorSecondaryVariant">@color/brand_green_dark</item>

        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/brand_background</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorError">@color/red</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/red</item>

    </style>

    <style name="AppTheme.Button">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="assetButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/material_button_asset</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next_black_24dp</item>
        <item name="android:layout_margin">14dp</item>
    </style>

    <!-- Fallback styles for Android < 21 that doesn't support dynamic attrs.
        See the styles in v21/ for the "full" version -->
    <style name="gradientButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/material_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="borderButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/material_button_border</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="selectionButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/material_button_selection</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="qrBg" parent="AppTheme.Base">
        <item name="android:background">@drawable/ic_qr_bg</item>
    </style>

    <style name="currencyButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/material_button_selection</item>
    </style>

    <style name="pinKeyboardView">
        <item name="android:keyBackground">@drawable/material_button_keyboard</item>
    </style>

    <!-- Constant stuff -->

    <style name="settingsButton" parent="AppTheme.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="nextButton" parent="AppTheme.Button">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/material_button</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <!-- Negative padding matching the width of ic_next -->
        <item name="android:drawablePadding">-48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="trezorPinButton" parent="gradientButton">
        <item name="android:height">80dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="preferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/FixForPreferenceCategoryStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="FixForPreferenceCategoryStyle" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/_preference_category_material</item>
    </style>
    <color name="_preference_fallback_accent_color">@color/grey_light</color>


    <style name="SectionTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="materialFeeButtonSelected">
        <item name="android:background">@drawable/fee_button_selected</item>
    </style>

    <style name="ThemeOverlay.Green.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Green.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Green.Body.Text</item>
    </style>

    <style name="MaterialAlertDialog.Green.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
    </style>

    <style name="MaterialAlertDialog.Green.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
