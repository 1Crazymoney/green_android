<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="TextAppearance.Green.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textSize">@dimen/headline1_textsize</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Green.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Green.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Green.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Green.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline5_textsize</item>
    </style>

    <!--  Toolbar use H6  -->
    <style name="TextAppearance.Green.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline6_textsize</item>
    </style>

    <style name="TextAppearance.Green.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <!--Your custom type style here-->
    </style>

    <style name="TextAppearance.Green.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <!--Your custom type style here-->
    </style>

    <style name="TextAppearance.Green.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/body1_textsize</item>
    </style>

    <style name="TextAppearance.Green.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textSize">@dimen/body2_textsize</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="TextAppearance.Green.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
    </style>

    <style name="TextAppearance.Green.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_medium</item>
        <item name="android:lineHeight" tools:ignore="NewApi">18sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.Green.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_medium</item>
    </style>

</resources>
